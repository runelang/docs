{
  "name": "RuneLang",
  "scopeName": "source.rune",
  "fileTypes": ["rune"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#builtins" },
    { "include": "#constants" },
    { "include": "#operators" },
    { "include": "#punctuation" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.rune",
          "match": "//.*$"
        },
        {
          "name": "comment.block.rune",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.rune",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.rune",
              "match": "\\\\[ntr\\\\\"0]"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.rune",
          "match": "\\b0x[0-9a-fA-F][0-9a-fA-F_]*\\b"
        },
        {
          "name": "constant.numeric.binary.rune",
          "match": "\\b0b[01][01_]*\\b"
        },
        {
          "name": "constant.numeric.float.rune",
          "match": "\\b[0-9][0-9_]*\\.[0-9][0-9_]*\\b"
        },
        {
          "name": "constant.numeric.integer.rune",
          "match": "\\b[0-9][0-9_]*\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.rune",
          "match": "\\b(Quest|Odyssey|Vigil|Oracle|Trap|Evade|Forfeit|Flee|Persist|returneth|end|of|begins|when|whilst|elsewise|fate|reveals|from|to|by|in|for|summon)\\b"
        },
        {
          "name": "keyword.declaration.rune",
          "match": "\\b(Ritual|Spell|Guild|Realm|Mutable|Enchanted|inherits)\\b"
        },
        {
          "name": "keyword.operator.word.rune",
          "match": "\\b(and|or|not|matches|is\\s+written\\s+as|is)\\b"
        },
        {
          "name": "variable.language.rune",
          "match": "\\b(thy)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.rune",
          "match": "\\b(Countstone|Potion|Runestone|Flagstone|Scroll|Tome|Coffer|Hex|Familiar|Void)\\b"
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.function.rune",
          "match": "\\b(Chant|Whisper|Inscribe|ReadScroll|WriteScroll|AppendScroll|ScrollExists|Abs|Pow|Sqrt|Min|Max|Floor|Ceil|Round|Sin|Cos|Tan|Log|Measure|Transmute|TypeOf|Format|Range|Roll|Assert|Halt|Chronos|Slumber)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.rune",
          "match": "\\b(Truth|Falsehood)\\b"
        },
        {
          "name": "constant.language.rune",
          "match": "\\b(PI|TAU|EULER|INFINITY)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.rune",
          "match": "(=>|->|\\*\\*|<<|>>|[+\\-*/%&|^~<>=!]=?)"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.rune",
          "match": "[()\\[\\]{},;:.]"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "entity.name.function.rune",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)(?=\\s*\\()"
        },
        {
          "name": "variable.other.rune",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
